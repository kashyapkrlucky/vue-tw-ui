{
  "name": "vue-tw-ui",
  "version": "0.1.2",
  "private": false,
  "type": "module",
  "main": "dist/vue-tw-ui.umd.js",
  "module": "dist/vue-tw-ui.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/vue-tw-ui.es.js",
      "require": "./dist/vue-tw-ui.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run type-check",
    "build-only": "vite build",
    "type-check": "vue-tsc --project tsconfig.json --declaration --emitDeclarationOnly --declarationDir dist",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run"
  },
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.7",
    "lucide-vue-next": "^0.507.0",
    "tailwindcss": "^4.1.7"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/eslint-plugin": "^1.1.39",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "cypress": "^14.4.0",
    "eslint": "^9.22.0",
    "eslint-plugin-vue": "~10.0.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.0.0",
    "npm-run-all2": "^7.0.2",
    "prettier": "3.5.3",
    "typescript": "~5.8.0",
    "vite": "^6.2.4",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vitest": "^3.1.1",
    "vue-tsc": "^2.2.10"
  }
}
